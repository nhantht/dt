@model Admin.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = Admin.App_LocalResources.LanguageLabel.ForgotPassword;
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ForgotPassword", "manage", FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Model.Message
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-full" value="@Admin.App_LocalResources.LanguageLabel.ResetPassword" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

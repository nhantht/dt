@model Website.Models.EditCampaignViewModels
@{
    List<Website.Models.CategoryListViewModels> categoryList = ViewBag.CategoryList as List<Website.Models.CategoryListViewModels>;
}
<h2>Campaign Details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Budget)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Budget)
        </dd>
    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    <hr />
    <h4>Category List</h4>
    <table class="table">
        <tr>
            <th>Selected</th>
            <th>
                Name
            </th>
            <th>
                Budget
            </th>
            <th></th>
        </tr>
        @foreach (Website.Models.CategoryListViewModels item in categoryList)
        {
            <tr>
                <td>
                    X
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailCategory", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
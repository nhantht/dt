@model Website.Models.DetailLinkViewModels

<h2>Create Link</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table style="">
                    <tr>
                        <td>
                            @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            <input type="button" value="Add" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
            </div>
            <label class="control-label col-md-2">Device: </label>
            <div class="col-md-10">
                <table style="">
                    <tr>
                        <td>
                            <select>
                                <option value="VND">
                                    Desktop
                                </option>
                                <option value="USD">
                                    Table
                                </option>
                                <option value="USD">
                                    Mobile
                                </option>
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <table>
                    <tr>
                        <td>
                            <table>
                                <tr>
                                    <td colspan="2"><img style="width:200px;height:300px" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2"><input type="file" style="width:220px" /></td>
                                </tr>
                            </table>
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>Title: </td>
                                    <td colspan="2">@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td>URL: </td>
                                    <td colspan="2">@Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td>Description: </td>
                                    <td colspan="2">@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td>Budget: </td>
                                    <td colspan="2">@Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td>Price: </td>
                                    <td>@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    <td>
                                        <select>
                                            <option value="VND">
                                                VND
                                            </option>
                                            <option value="USD">
                                                USD
                                            </option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Area: </td>
                                    <td colspan="2">
                                        <select>
                                            <option value="VND">
                                                Da Nang - VietNam
                                            </option>
                                            <option value="USD">
                                                Ha Noi - VietNam
                                            </option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Time frame: </td>
                                    <td colspan="2">
                                        <select>
                                            <option value="VND">
                                                01 AM - 06 AM
                                            </option>
                                            <option value="USD">
                                                07 AM - 15 PM
                                            </option>
                                            <option value="USD">
                                                16 PM - 23 PM
                                            </option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Display Number/Person: </td>
                                    <td>
                                        <select>
                                            <option value="VND">
                                                1
                                            </option>
                                            <option value="USD">
                                                2
                                            </option>
                                            <option value="USD">
                                                3
                                            </option>
                                            <option value="USD">
                                                ...
                                            </option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "detailcategory", new { Id = 1 })
</div>

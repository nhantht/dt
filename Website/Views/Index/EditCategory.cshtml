@model Website.Models.EditCategoryViewModels
<h2>Update Category</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form">
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <p>@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })</p>
            @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-full" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back", "Details", new { Id = 1 })
</div>

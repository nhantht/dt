@model Website.Models.ScheduleDetailModel
@{
    Layout = null;
}
<h2>Update URL</h2>
<div class="form" style="width: 600px;display: table-cell;">
    <div class="validation-summary-valid text-danger" data-valmsg-summary="true" id="messagePanel">
        <ul>
            <li style="display:none"></li>
        </ul>
    </div>
    <input data-val="true" data-val-number="The field Code must be a number." data-val-required="The Code field is required." id="Id" name="Id" type="hidden" value="@Model.Id">
    <div class="form-group">
        <label class="control-label" for="FilePath">URL</label>
        <input class="form-control text-box single-line" data-val="true" data-val-required="You must enter File Path" id="FilePath" maxlength="200" name="FilePath" type="text" value="@Model.FilePath">
    </div>
    <div class="form-group">
        <label class="control-label" for="Hour">Hour</label>
        <input class="form-control text-box single-line" data-val="true" data-val-number="The field Hour must be a number." data-val-regex="Hour is invalid. Hour must be a numberic and use a full stop (.) for decimals." data-val-regex-pattern="[0-9]*\.?[0-9]+" data-val-required="You must name the Hour" id="Hour" maxlength="2" name="Hour" type="text" value="@Model.Hour">
    </div>
    <div class="form-group">
        <label class="control-label" for="Minute">Minute</label>
        <input class="form-control text-box single-line" data-val="true" data-val-number="The field Minute must be a number." data-val-regex="Minute is invalid. Minute must be a numberic and use a full stop (.) for decimals." data-val-regex-pattern="[0-9]*\.?[0-9]+" data-val-required="You must name the Minute" id="Minute" maxlength="2" name="Minute" type="text" value="@Model.Minute">
    </div>
    <div class="form-group">
        <label class="control-label" for="Active">Active</label>
        <input type="checkbox" checked="@Model.Active">
    </div>
    <div class="form-group">
        <input type="button" value="Update" onclick="Index.updateSchedule()" class="btn btn-primary btn-full">
    </div>
    <div class="form-control-noborder" style="text-align:center">
        <img src="../images/line.png">
        or?
        <img src="../images/line.png">
    </div>
    <div class="form-group">
        <input type="button" value="Delete" onclick="Index.destroySchedule(@Model.Id)" class="btn btn-primary btn-full" />
    </div>
</div>
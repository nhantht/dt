@model Admin.Models.ChangePasswordViewModel2

<h2>@Website.App_LocalResources.LanguageLabel.CreateNewPassword</h2>

@using (Html.BeginForm("ChangePassword2", "Manage", FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    if (string.IsNullOrEmpty(Model.Message) == false)
    {
        <ul class="text-danger" style="width:320px">
            <li>@Model.Message</li>
        </ul>
    }
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Phone)
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmedNewPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmedNewPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Change password" class="btn btn-primary btn-full" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
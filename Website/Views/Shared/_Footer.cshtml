<script>
    function setFooterPosition() {
        $("#footer").removeClass("footer");
        if (document.location.pathname.toLowerCase() != "/adv") {
            if ($("body").height() <= $(window).height()) {
                $("body").height($(window).height());
                $("#footer").addClass("footer");
                $(".middle-content").height($("#footer").position().top - $(".middle-content").position().top - 5);
            }
        }
    }
    $(document).ready(function () {
        if ($("#btnLogin"))
            setFooterPosition();
    });
    $(window).resize(function () {
        setFooterPosition();
    });
</script>